<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" type="text/css" href="/style.css">
        <link rel="icon" href= {% block css %}
        {% endblock %}>

        
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
       
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav id="menu">
                <a href="{{path('app_front_home_home')}}">Accueil⚫️</a>
                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{path('app_admin_book_liste')}}">Les Livres</a>
                <a href="{{path('app_admin_author_liste')}}">Les Auteurs</a>
                <a href="{{path('app_admin_category_liste')}}">Les Catégories</a>
                <a href="{{path('app_admin_publishingHouse_list')}}">Les maisons d'édition</a> 
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                <a href="{{path('app_security_myProfile')}}">Changer le profil</a>      
                <a href="{{path('app_front_basket_display')}}">Mon panier</a>           
                {% endif %}
                

                {% if app.user %}
                <p>Bienvenue {{app.user.email}} </p>
                <a href="{{path('app_logout')}}">Se déconnecter</a>
                {% else %}
                
                
                <a href="{{path('app_login')}}">Se connecter</a>
                {% endif %}
            </nav>
        </header>
        
        {% block body %}{% endblock %}

        <h1>{% block titleBookShop %}{% endblock %}</h1>

        
        <h1 id="error">{% block error %}{% endblock %}</h1>
        <p>{% block resultat %}{% endblock %}</p>
    </body>
</html>
